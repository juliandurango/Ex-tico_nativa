<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mariposas">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@color/azul_claro"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:layout_marginBottom="20sp"
            android:translationX="40sp"
            app:srcCompat="@drawable/mariposa_1" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="484dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/bolla"
                    app:civ_border_color="#99000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="258dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="Bolla antha"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="Pertenece a la familia Hesperiidae al igual que la mariposa Phocides."
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/mariposa"
                    app:civ_border_color="#99000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="258dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="Phocides"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="226dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="Esta especie endémica de Colombia pertenece a la familia Hesperiidae, la cual se puede encontrar en el departamento del Cauca."
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="216dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="20sp"
                    android:src="@drawable/passova"
                    app:civ_border_color="#99000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="258dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="Passova nigrocephala"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="217dp"
                        android:layout_height="116dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo"
                        android:gravity="start|top"
                        android:text="También es conocida como Punta de fuego por el color rojizo característico de su cabeza. Pertenece a la familia Passova, esta subespecie es única en el país."
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/verde_oscuro"
            android:fontFamily="@font/baloo"
            android:onClick="Volver"
            android:text="Volver"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:translationX="100sp"
            app:cornerRadius="100sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>